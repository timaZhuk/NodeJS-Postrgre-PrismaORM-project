generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id            Int      @id @default(autoincrement())
  title         String
  publishedDate DateTime
  authorId      Int
  author        Author   @relation(fields: [authorId], references: [id], onDelete: Cascade)
}

model Author {
  id    Int    @id @default(autoincrement())
  name  String
  books Book[]
}
